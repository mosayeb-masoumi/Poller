<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:id="@+id/row_survey_LLbackground"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.3">


            <ImageView
                android:id="@+id/row_survey_imgLeftday"
                android:layout_width="35dp"
                android:layout_centerInParent="true"
                android:layout_height="35dp" />

            <com.rahbarbazaar.poller.android.Utilities.CustomTextView
                android:id="@+id/txt_survey_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="2dp"
                android:text=""
                android:textColor="@color/blue"
                android:textSize="15sp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">


            <ImageView
                android:id="@+id/row_survey_imgCoin"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="2dp"
                android:visibility="gone"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true" />

            <com.rahbarbazaar.poller.android.Utilities.CustomTextView
                android:id="@+id/text_survey_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textSize="@dimen/_10sdp" />

            <com.rahbarbazaar.poller.android.Utilities.CustomTextView
                android:id="@+id/text_survey_unit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:gravity="center"
                android:textSize="@dimen/_9sdp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3.5">

            <com.rahbarbazaar.poller.android.Utilities.CustomTextView
                android:id="@+id/text_survey_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:maxLines="2"
                android:paddingEnd="5dp"
                android:text="khkhjj"
                android:textSize="17sp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/row_survey_imgmobile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:padding="5dp"
               />

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="5dp">

        <ImageView
            android:layout_width="0dp"
            android:id="@+id/row_survey_underImg_left"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/row_survey_underImg_right"
            android:layout_weight="1"
            android:orientation="vertical" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4.5">

        </LinearLayout>
    </LinearLayout>

</LinearLayout>