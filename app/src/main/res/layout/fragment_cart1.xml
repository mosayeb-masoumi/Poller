<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_53sdp">

        <com.rahbarbazaar.poller.android.Utilities.CustomTextView
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="@dimen/_10sdp"
            android:background="@drawable/dialog_btn_shape"
            android:gravity="center"
            android:text="@string/transaction_tab"
            android:textColor="@color/colorAccent1"
            android:textSize="@dimen/_18ssp"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_22sdp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/bg_myaccount_coin_icon" />
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_marginTop="@dimen/dimen_10">

        <com.rahbarbazaar.poller.android.Utilities.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/dimen_10"
            android:id="@+id/tv_total_earned"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="@dimen/font_15"
            android:textStyle="bold"
            android:text="@string/total_prices_earned"
            />

    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/_5sdp"
        android:orientation="vertical"
        android:padding="@dimen/_2sdp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_weight="2.1">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@drawable/bg_myaccount_deeppink" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:background="@drawable/bg_myaccount_lightpink" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp">

                <RelativeLayout
                    android:layout_width="@dimen/_110sdp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/_20sdp">


                    <com.rahbarbazaar.poller.android.Utilities.CustomTextView
                        android:id="@+id/txt_16"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:text="@string/wallet_balance"
                        android:textColor="#1f1a6b"
                        android:textSize="@dimen/font_14"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/img_16"
                        android:layout_width="@dimen/_90sdp"
                        android:layout_height="@dimen/_90sdp"
                        android:layout_below="@+id/txt_16"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/bg_myaccount_toman_icon" />

                    <!--<com.rahbarbazaar.poller.android.Utilities.CustomTextView-->
                        <!--android:id="@+id/tv_point"-->
                        <!--android:layout_width="wrap_content"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:layout_below="@+id/img_16"-->
                        <!--android:text="45265"-->
                        <!--android:layout_marginTop="@dimen/_3sdp"-->
                        <!--android:layout_centerHorizontal="true"-->
                        <!--android:textColor="#fc29ba"-->
                        <!--android:textSize="@dimen/font_14"-->
                        <!--android:textStyle="bold" />-->
                    <com.rahbarbazaar.poller.android.Utilities.CustomTextView
                        android:id="@+id/txt_balance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/img_16"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/_3sdp"
                        android:text="15245"
                        android:textColor="#ca1390"
                        android:textSize="14sp" />


                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="@dimen/_110sdp"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="@dimen/_20sdp">

                    <com.rahbarbazaar.poller.android.Utilities.CustomTextView
                    android:id="@+id/txt_18"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="@string/text_your_point"
                    android:textColor="#1f1a6b"
                    android:textSize="14sp" />

                    <ImageView
                        android:id="@+id/img_17"
                        android:layout_width="@dimen/_90sdp"
                        android:layout_height="@dimen/_90sdp"
                        android:layout_below="@+id/txt_18"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/bg_myaccount_papasi_icon" />

                    <com.rahbarbazaar.poller.android.Utilities.CustomTextView
                    android:id="@+id/tv_point"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/img_17"
                    android:text="45265"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:layout_centerHorizontal="true"
                    android:textColor="#ca1390"
                    android:textSize="@dimen/font_14"
                    android:textStyle="bold" />

                </RelativeLayout>
            </RelativeLayout>
        </RelativeLayout>


        <RelativeLayout
            android:padding="@dimen/dimen_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_5"
            android:layout_marginTop="@dimen/dimen_10"
            android:layout_marginEnd="@dimen/dimen_5"
            android:visibility="gone"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_toStartOf="@+id/tv_cart_price_view"
                android:layout_height="@dimen/dimen_1"
                android:layout_centerVertical="true"
                android:background="@color/colorPrimaryDark" />

            <com.rahbarbazaar.poller.android.Utilities.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="@color/main_page_toolbar"
                android:padding="@dimen/dimen_5"
                android:paddingStart="@dimen/dimen_5"
                android:paddingEnd="@dimen/dimen_5"
                android:text="@string/subject_text"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/font_13"
                android:textStyle="bold" />

            <com.rahbarbazaar.poller.android.Utilities.CustomTextView
                android:id="@+id/tv_cart_price_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:paddingStart="@dimen/dimen_5"
                android:paddingEnd="@dimen/dimen_5"
                android:layout_marginEnd="@dimen/dimen_3"
                android:background="@color/main_page_toolbar"
                android:padding="@dimen/dimen_5"
                android:text="@string/text_price"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/font_13"
                android:textStyle="bold" />

            <com.rahbarbazaar.poller.android.Utilities.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:paddingStart="@dimen/dimen_5"
                android:paddingEnd="@dimen/dimen_5"
                android:layout_marginEnd="@dimen/dimen_3"
                android:background="@color/main_page_toolbar"
                android:padding="@dimen/dimen_5"
                android:text="@string/text_date"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/font_13"
                android:textStyle="bold" />

        </RelativeLayout>






        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginEnd="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_5sdp">
            <LinearLayout
                android:layout_width="match_parent"
                android:id="@+id/rl_6"
                android:layout_height="match_parent">


                <com.rahbarbazaar.poller.android.Utilities.CustomTextView
                    android:id="@+id/tv_transaction_tab"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/bg_myaccount_tab"
                    android:layout_marginEnd="@dimen/_2sdp"
                    android:gravity="center"
                    android:textColor="@color/gray"
                    android:tag="selected"
                    android:text="@string/text_transaction_tab_one" />
                <com.rahbarbazaar.poller.android.Utilities.CustomTextView
                    android:id="@+id/tv_point_tab"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_marginStart="@dimen/_2sdp"
                    android:background="@drawable/bg_myaccount_tabpink"
                    android:text="@string/text_transaction_tab_two"
                    android:textColor="@color/gray" />


            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_2sdp"
                android:layout_alignParentBottom="true"
                android:background="#ca1390"/>

        </RelativeLayout>
        <!--<ImageView-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="@dimen/_2sdp"-->
            <!--android:layout_marginStart="@dimen/_25sdp"-->
            <!--android:layout_marginEnd="@dimen/_25sdp"-->
            <!--android:background="#fc29ba"/>-->

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginEnd="@dimen/_20sdp"
            android:layout_weight="3">

            <android.support.v4.widget.SwipeRefreshLayout
                android:id="@+id/cart_refresh"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/dimen_2"
                android:layout_marginTop="@dimen/dimen_3"
                android:layout_marginEnd="@dimen/dimen_2"
                android:padding="@dimen/dimen_2">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/cart_rv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </android.support.v4.widget.SwipeRefreshLayout>

        </RelativeLayout>

    </LinearLayout>
</LinearLayout>