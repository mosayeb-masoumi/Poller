<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layoutDirection="rtl"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/linear_support"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_34"
        android:layout_marginTop="@dimen/dimen_3"
        android:foreground="?attr/selectableItemBackground"
        android:orientation="horizontal"
        android:paddingStart="@dimen/dimen_5"
        android:paddingEnd="@dimen/dimen_0">

        <ImageView
            android:layout_width="@dimen/dimen_34"
            android:layout_height="match_parent"
            android:padding="@dimen/dimen_14"
            android:src="@drawable/arrow_down"
            android:tint="#818181" />

        <com.rahbarbazaar.poller.android.Utilities.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="مرکز پشتیبانی"
            android:textSize="@dimen/font_13" />

    </LinearLayout>

    <LinearLayout
        android:visibility="gone"
        android:id="@+id/linear_submenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/linear_faq"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_34"
            android:layout_marginTop="@dimen/dimen_3"
            android:foreground="?attr/selectableItemBackground"
            android:orientation="horizontal"
            android:paddingStart="@dimen/dimen_5"
            android:paddingEnd="@dimen/dimen_0">

            <TextView
                android:layout_width="@dimen/dimen_34"
                android:layout_height="match_parent"
                android:gravity="center"
                android:padding="@dimen/dimen_9"
                android:text="-"
                android:tint="#818181" />

            <com.rahbarbazaar.poller.android.Utilities.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="سوالات متداول"
                android:textSize="@dimen/font_13" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_report_issue"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_34"
            android:layout_marginTop="@dimen/dimen_3"
            android:foreground="?attr/selectableItemBackground"
            android:orientation="horizontal"
            android:paddingStart="@dimen/dimen_5"
            android:paddingEnd="@dimen/dimen_0">

            <TextView
                android:layout_width="@dimen/dimen_34"
                android:layout_height="match_parent"
                android:gravity="center"
                android:padding="@dimen/dimen_9"
                android:text="-"
                android:tint="#818181" />

            <com.rahbarbazaar.poller.android.Utilities.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="گزارش مشکل"
                android:textSize="@dimen/font_13" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_videos"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_34"
            android:layout_marginTop="@dimen/dimen_3"
            android:foreground="?attr/selectableItemBackground"
            android:orientation="horizontal"
            android:paddingStart="@dimen/dimen_5"
            android:paddingEnd="@dimen/dimen_0">

            <TextView
                android:layout_width="@dimen/dimen_34"
                android:layout_height="match_parent"
                android:gravity="center"
                android:padding="@dimen/dimen_9"
                android:text="-"
                android:tint="#818181" />

            <com.rahbarbazaar.poller.android.Utilities.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="ویدیوها"
                android:textSize="@dimen/font_13" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>