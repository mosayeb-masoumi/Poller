<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_65sdp"
        android:background="#ffffff"
        android:id="@+id/header_market">

        <com.rahbarbazaar.poller.android.Utilities.CustomTextView
            android:id="@+id/text_title"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_40sdp"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/dialog_btn_shape"
            android:text="@string/text_lottery"
            android:textColor="@color/colorAccent1"
            android:textSize="@dimen/_18ssp" />

        <ImageView
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_22sdp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/lottery_header_icon"/>
    </RelativeLayout>





    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#fff"
        android:orientation="vertical"
        android:layout_weight="2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:layout_weight="1">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_2sdp"
                android:orientation="vertical">
                <com.rahbarbazaar.poller.android.Utilities.CustomTextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_25sdp"
                    android:id="@+id/txt_title_lottery_yearly"
                    android:layout_marginEnd="@dimen/_15sdp"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:gravity="center"
                    android:background="@drawable/bg_lottery_active"
                    android:text="@string/text_yearly_lottery"
                    android:textColor="@color/white_gray"
                    android:textSize="@dimen/font_15" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/txt_title_lottery_yearly"
                    android:layout_marginEnd="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_1sdp"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:background="@drawable/bg_lottery_active_item">

                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:layout_weight="1.2">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_2sdp"
                android:orientation="vertical">
                <com.rahbarbazaar.poller.android.Utilities.CustomTextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_25sdp"
                    android:id="@+id/txt_title_activelottery"
                    android:layout_marginEnd="@dimen/_15sdp"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:gravity="center"
                    android:background="@drawable/bg_lottery_active"
                    android:text="@string/text_current_lottery"
                    android:textColor="@color/white_gray"
                    android:textSize="@dimen/font_15" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/txt_title_activelottery"
                    android:layout_marginEnd="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_1sdp"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:background="@drawable/bg_lottery_active_item">

                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2.3"
            android:orientation="vertical">
            <com.rahbarbazaar.poller.android.Utilities.CustomTextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_25sdp"
                android:layout_marginEnd="@dimen/_15sdp"
                android:layout_marginStart="@dimen/_15sdp"
                android:gravity="center"
                android:background="@drawable/bg_lottery_past"
                android:text="@string/text_pre_lottery"
                android:textColor="@color/white_gray"
                android:textSize="@dimen/font_15" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/lottery_recycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_3sdp"
                android:layout_marginEnd="@dimen/_15sdp"
                android:layout_marginStart="@dimen/_15sdp"
                android:padding="@dimen/dimen_3" />
        </LinearLayout>



    </LinearLayout>



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:elevation="0dp"
        android:layout_weight="0.8">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:layout_marginBottom="@dimen/_30sdp"
            android:src="@drawable/lorrety_device_icon"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_alignParentBottom="true"
            android:id="@+id/llbtom"
            android:gravity="end"
            android:background="@drawable/bg_toolbar1"
            android:layout_height="@dimen/dimen_55">

            <LinearLayout
                android:id="@+id/linear_exit"
                android:layout_width="@dimen/dimen_70"
                android:paddingTop="@dimen/_10sdp"
                android:paddingBottom="@dimen/_10sdp"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_height="match_parent">

                <ImageView
                    android:src="@drawable/arrow_left"
                    android:layout_centerVertical="true"
                    android:id="@+id/image_exit"
                    android:layout_width="match_parent"
                    android:tint="@color/main_page_toolbar"
                    android:layout_gravity="center_vertical"
                    android:layout_height="match_parent" />
            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>


    </LinearLayout>
</LinearLayout>