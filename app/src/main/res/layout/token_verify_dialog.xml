<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/html_root"
    android:background="@drawable/white_corner_bg"
    android:gravity="center"
    android:layoutDirection="rtl"
    android:orientation="vertical">

    <ImageView
        android:layout_width="@dimen/dimen_60"
        android:layout_height="@dimen/dimen_60"
        android:padding="@dimen/dimen_2"
        android:layout_marginTop="@dimen/dimen_10"
        android:src="@drawable/token_verify" />

    <com.rahbarbazaar.poller.android.Utilities.CustomTextView
        android:layoutDirection="ltr"
        android:layout_width="wrap_content"
        android:gravity="center"
        android:lineSpacingMultiplier="1.5"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_15"
        android:text="@string/token_verify_message"
        android:textSize="@dimen/font_17" />

    <com.rahbarbazaar.poller.android.Utilities.CustomTextView
        android:layout_marginTop="@dimen/dimen_5"
        android:layout_width="match_parent"
        android:id="@+id/text_body"
        android:gravity="center"
        android:textSize="@dimen/font_14"
        android:layout_marginBottom="@dimen/dimen_10"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layoutDirection="ltr"
        android:layout_marginBottom="@dimen/dimen_8"
        android:orientation="horizontal">

        <com.rahbarbazaar.poller.android.Utilities.CustomTextView
            android:id="@+id/btn_exit_dialog"
            android:layout_width="0dp"
            android:layout_height="@dimen/dimen_42"
            android:layout_marginStart="@dimen/dimen_10"
            android:layout_marginEnd="@dimen/dimen_10"
            android:layout_weight="1"
            android:background="@drawable/btn_bg_dark_blue"
            android:gravity="center"
            android:text="شروع نظرسنجی"
            android:textColor="@color/main_page_toolbar" />

    </LinearLayout>

</LinearLayout>