<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/lottery_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_page_toolbar"
    tools:context=".Ui.activities.LotteryActivity">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/app_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/image_exit"
                    android:layout_width="@dimen/dimen_30"
                    android:layout_height="@dimen/dimen_30"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:padding="@dimen/dimen_6"
                    android:src="@drawable/close"
                    android:tint="@color/main_page_toolbar" />

                <com.wang.avi.AVLoadingIndicatorView
                    android:id="@+id/av_loading"
                    android:layout_width="@dimen/dimen_20"
                    android:layout_height="@dimen/dimen_20"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/dimen_3"
                    android:layout_toStartOf="@+id/text_title"
                    android:paddingTop="@dimen/dimen_6"
                    app:indicatorName="BallPulseSyncIndicator" />

                <com.rahbarbazaar.poller.android.Utilities.CustomTextView
                    android:id="@+id/text_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_centerVertical="true"
                    android:text="@string/text_lottery"
                    android:textColor="@color/main_page_toolbar"
                    android:textSize="@dimen/font_16" />

            </RelativeLayout>

        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>

    <LinearLayout
        android:layout_marginStart="@dimen/dimen_7"
        android:id="@+id/rl_total_point"
        app:layout_constraintTop_toBottomOf="@id/app_bar"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layoutDirection="locale"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_10">

        <com.rahbarbazaar.poller.android.Utilities.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dimen_10"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="@dimen/font_15"
            android:textStyle="bold"
            android:layout_gravity="end"
            android:text="@string/text_point"
            />

        <com.rahbarbazaar.poller.android.Utilities.CustomTextView
            android:id="@+id/tv_point"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_10"
            android:layout_gravity="start"
            tools:text="۰"
            android:textColor="@color/light_black"
            android:textSize="@dimen/font_14"
            android:textStyle="bold" />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl_header"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_20"
        android:layout_marginTop="@dimen/dimen_5"
        app:layout_constraintTop_toBottomOf="@+id/rl_total_point">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_1"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/dimen_9"
            android:layout_marginEnd="@dimen/dimen_9"
            android:background="@color/indicator_color" />

        <com.rahbarbazaar.poller.android.Utilities.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@color/main_page_toolbar"
            android:paddingStart="@dimen/dimen_7"
            android:paddingEnd="@dimen/dimen_7"
            android:text="@string/text_current_lottery"
            android:textColor="#282828"
            android:textSize="@dimen/font_15" />

        <ImageView
            android:id="@+id/img_lottery_info"
            android:layout_width="@dimen/dimen_42"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:background="@color/main_page_toolbar"
            android:contentDescription="@android:string/ok"
            android:src="@drawable/info"
            android:tint="@color/indicator_color" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_current_lottery"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:layout_marginTop="@dimen/dimen_5"
        app:layout_constraintTop_toBottomOf="@+id/rl_header">

        <com.rahbarbazaar.poller.android.Utilities.CustomTextView
            android:id="@+id/tv_lottery_title"
            android:layout_alignParentTop="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dimen_5"
            android:gravity="center"
            tools:text="تست عنوان" />

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_lottery_title"
            android:layout_marginTop="@dimen/dimen_14">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_centerHorizontal="true"
                android:layout_marginEnd="@dimen/dimen_11"
                android:layoutDirection="locale"
                android:orientation="horizontal"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintWidth_default="percent"
                app:layout_constraintWidth_percent=".5">

                <com.rahbarbazaar.poller.android.Utilities.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dimen_3"
                    android:layout_marginEnd="@dimen/dimen_5"
                    android:text="@string/text_participation_amount" />

                <com.rahbarbazaar.poller.android.Utilities.CustomTextView
                    android:id="@+id/tv_lottery_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text=" ۲۰۰" />

            </LinearLayout>

            <com.rahbarbazaar.poller.android.Utilities.CustomTextView
                android:id="@+id/tv_lottery_date"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintWidth_default="percent"
                app:layout_constraintWidth_percent=".5"
                tools:text="1397/04/24" />

        </android.support.constraint.ConstraintLayout>

        <LinearLayout
            android:id="@+id/linear_actions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal">

            <com.rahbarbazaar.poller.android.Utilities.CustomTextView
                android:id="@+id/tv_cancel"
                android:layout_width="0dp"
                android:layout_height="@dimen/dimen_37"
                android:layout_marginStart="@dimen/dimen_7"
                android:layout_weight="1"
                android:background="@drawable/btn_bg_grey"
                android:gravity="center"
                android:text="@string/cancel_text"
                android:textColor="@color/main_page_toolbar"
                android:visibility="gone" />

            <com.rahbarbazaar.poller.android.Utilities.CustomTextView
                android:id="@+id/tv_take_part"
                android:layout_width="0dp"
                android:layout_height="@dimen/dimen_37"
                android:layout_marginStart="@dimen/dimen_7"
                android:layout_marginEnd="@dimen/dimen_7"
                android:layout_weight="1"
                android:background="@drawable/btn_bg_dark_blue"
                android:gravity="center"
                android:text="@string/text_lottery_join"
                android:textColor="@color/main_page_toolbar" />

        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_header_2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_20"
        android:layout_marginTop="@dimen/dimen_15"
        app:layout_constraintTop_toBottomOf="@+id/rl_current_lottery">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_1"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/dimen_9"
            android:layout_marginEnd="@dimen/dimen_9"
            android:background="@color/indicator_color" />

        <com.rahbarbazaar.poller.android.Utilities.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@color/main_page_toolbar"
            android:paddingStart="@dimen/dimen_7"
            android:paddingEnd="@dimen/dimen_7"
            android:text="@string/text_pre_lottery"
            android:textColor="#282828"
            android:textSize="@dimen/font_15" />

    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/lottery_recycler"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:padding="@dimen/dimen_3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rl_header_2" />

</android.support.constraint.ConstraintLayout>