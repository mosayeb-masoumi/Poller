<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_page_toolbar"
    android:layoutDirection="ltr"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_55"
        android:gravity="center"
        android:orientation="horizontal">

        <com.rahbarbazaar.poller.android.Utilities.CustomTextView
            android:id="@+id/txt_balance"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingTop="5dp"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="14sp" />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:padding="@dimen/dimen_7"
            android:src="@drawable/wallet"
            android:tint="@color/colorPrimaryDark" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_10">

        <com.rahbarbazaar.poller.android.Utilities.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/dimen_10"
            android:id="@+id/tv_total_earned"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="@dimen/font_15"
            android:textStyle="bold"
            android:text="@string/total_prices_earned"
             />

        <com.rahbarbazaar.poller.android.Utilities.CustomTextView
            android:id="@+id/tv_point"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_10"
            tools:text="Û°"
            android:textColor="@color/light_black"
            android:textSize="@dimen/font_14"
            android:textStyle="bold" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_44"
        android:layout_marginStart="@dimen/dimen_7"
        android:layout_marginTop="@dimen/dimen_5"
        android:layout_marginEnd="@dimen/dimen_7"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_37"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <com.rahbarbazaar.poller.android.Utilities.CustomTextView
                android:id="@+id/tv_transaction_tab"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:tag="selected"
                android:text="@string/text_transaction_tab_one"
                android:textColor="@color/colorPrimary" />

            <com.rahbarbazaar.poller.android.Utilities.CustomTextView
                android:id="@+id/tv_point_tab"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/text_transaction_tab_two"
                android:textColor="@color/default_text_color" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_indicator"
            android:layout_width="wrap_content"
            android:layout_height="3dp"
            android:layout_marginTop="@dimen/dimen_1"
            android:background="@color/colorPrimary" />

    </LinearLayout>

    <RelativeLayout
        android:padding="@dimen/dimen_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen_5"
        android:layout_marginTop="@dimen/dimen_10"
        android:layout_marginEnd="@dimen/dimen_5"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_toStartOf="@+id/tv_cart_price_view"
            android:layout_height="@dimen/dimen_1"
            android:layout_centerVertical="true"
            android:background="@color/colorPrimaryDark" />

        <com.rahbarbazaar.poller.android.Utilities.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@color/main_page_toolbar"
            android:padding="@dimen/dimen_5"
            android:paddingStart="@dimen/dimen_5"
            android:paddingEnd="@dimen/dimen_5"
            android:text="@string/subject_text"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="@dimen/font_13"
            android:textStyle="bold" />

        <com.rahbarbazaar.poller.android.Utilities.CustomTextView
            android:id="@+id/tv_cart_price_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:paddingStart="@dimen/dimen_5"
            android:paddingEnd="@dimen/dimen_5"
            android:layout_marginEnd="@dimen/dimen_3"
            android:background="@color/main_page_toolbar"
            android:padding="@dimen/dimen_5"
            android:text="@string/text_price"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="@dimen/font_13"
            android:textStyle="bold" />

        <com.rahbarbazaar.poller.android.Utilities.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:paddingStart="@dimen/dimen_5"
            android:paddingEnd="@dimen/dimen_5"
            android:layout_marginEnd="@dimen/dimen_3"
            android:background="@color/main_page_toolbar"
            android:padding="@dimen/dimen_5"
            android:text="@string/text_date"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="@dimen/font_13"
            android:textStyle="bold" />

    </RelativeLayout>

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/cart_refresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/dimen_2"
        android:layout_marginTop="@dimen/dimen_3"
        android:layout_marginEnd="@dimen/dimen_2"
        android:padding="@dimen/dimen_2">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/cart_rv"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </android.support.v4.widget.SwipeRefreshLayout>

</LinearLayout>