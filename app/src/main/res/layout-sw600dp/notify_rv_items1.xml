<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_marginStart="@dimen/_10sdp"
    android:id="@+id/rl_row_message"
    android:layout_marginEnd="@dimen/_10sdp"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_70"
        android:layout_gravity="center_vertical">

        <ImageView
            android:id="@+id/image_msg_status"
            android:layout_width="@dimen/dimen_70"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_3"
            android:padding="@dimen/dimen_14"
            android:src="@drawable/message_close_icon" />

        <com.rahbarbazaar.poller.android.Utilities.CustomTextView
            android:id="@+id/text_msg_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/dimen_20"
            android:layout_toStartOf="@id/text_msg_date"
            android:layout_toEndOf="@+id/image_msg_status"
            android:gravity="center"
            android:textSize="17dp"
            tools:text="سلام عرض کردم" />

        <com.rahbarbazaar.poller.android.Utilities.CustomTextView
            android:id="@+id/text_msg_date"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/dimen_15"
            android:gravity="center"
            android:textSize="15dp"
            android:textColor="@color/colorPrimaryDark"
            tools:text="2019-03-01 03:30:00" />

    </RelativeLayout>


</RelativeLayout>

