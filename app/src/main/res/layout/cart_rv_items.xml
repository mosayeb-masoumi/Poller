<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dimen_65"
    android:layoutDirection="rtl"
    app:cardCornerRadius="@dimen/dimen4"
    app:cardElevation="@dimen/dimen_2">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layoutDirection="ltr">

        <LinearLayout
            android:id="@+id/linear_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/dimen_10"
            android:gravity="center"
            android:orientation="vertical">

            <com.rahbarbazaar.poller.android.Utilities.CustomTextView
                android:id="@+id/text_cart_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLength="10"
                android:text="97/08/21"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/font_13" />

            <!--<dev.hamed.pollerproject.Utilities.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="21:43"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/font_13" />-->

        </LinearLayout>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_toStartOf="@+id/text_cart_price"
            android:layout_toEndOf="@+id/linear_date"
            android:gravity="center"
            android:orientation="horizontal">

            <com.rahbarbazaar.poller.android.Utilities.CustomTextView
                android:id="@+id/text_cart_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:ellipsize="end"
                android:gravity="center"
                android:singleLine="true"
                android:text="تعریف نشده"
                android:textColor="@color/light_black"
                android:textSize="@dimen/font_14" />

            <com.rahbarbazaar.poller.android.Utilities.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="موضوع : "
                android:textSize="@dimen/font_13" />

        </LinearLayout>

        <com.rahbarbazaar.poller.android.Utilities.CustomTextView
            android:id="@+id/text_cart_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/dimen_10"
            android:text="مبلغ : 2۰ قرون"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="@dimen/font_13" />

    </RelativeLayout>


</android.support.v7.widget.CardView>