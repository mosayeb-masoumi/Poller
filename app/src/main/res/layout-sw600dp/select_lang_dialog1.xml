<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_btn_shape_tablet"
    android:layout_margin="@dimen/_5sdp"
    android:gravity="center"
    android:orientation="vertical">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/dialog_header_shape"
        android:gravity="center">
        <com.rahbarbazaar.poller.android.Utilities.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_select_lang_header"
            android:textColor="@color/white_gray"
            android:textSize="@dimen/font_17" />
    </RelativeLayout>


    <!--<com.rahbarbazaar.poller.android.Utilities.CustomTextView-->
        <!--android:id="@+id/text_title"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_marginTop="@dimen/dimen_20"-->
        <!--android:text="@string/text_select_lang"-->
        <!--android:textSize="@dimen/font_15" />-->

    <com.rahbarbazaar.poller.android.Utilities.CustomTextView
        android:id="@+id/text_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_15sdp"
        android:text="@string/text_select_lang"
        android:textColor="@color/blue"
        android:textSize="@dimen/font_17" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_marginBottom="@dimen/dimen_10"
        android:orientation="horizontal">

        <com.rahbarbazaar.poller.android.Utilities.CustomTextView
            android:id="@+id/btn_eng"
            android:layout_width="0dp"
            android:layout_height="@dimen/dimen_45"
            android:layout_marginStart="@dimen/dimen_10"
            android:layout_weight="1"
            android:gravity="center"
            android:textStyle="bold"
            android:text="English"
            android:textSize="17sp"
            android:background="@drawable/dialog_btn_shape_tablet"
            android:textColor="@color/blue" />

        <com.rahbarbazaar.poller.android.Utilities.CustomTextView
            android:id="@+id/btn_fa"
            android:layout_width="0dp"
            android:layout_height="@dimen/dimen_45"
            android:layout_marginStart="@dimen/dimen_10"
            android:layout_marginEnd="@dimen/dimen_10"
            android:layout_weight="1"
            android:gravity="center"
            android:textStyle="bold"
            android:text="فارسی"
            android:textSize="17sp"
            android:background="@drawable/dialog_btn_shape_tablet"
            android:textColor="@color/blue" />

    </LinearLayout>

</LinearLayout>