<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="rtl"
    android:fillViewport="true">

    <LinearLayout
        android:layoutDirection="ltr"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="118dp"
            android:layout_height="118dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="17dp"
            android:background="@drawable/circle_stroke"
            android:src="@drawable/user_login"
            android:tint="@color/colorPrimary" />

        <com.rahbarbazaar.poller.Utilities.CustomTextView
            android:layout_width="wrap_content"
            android:id="@+id/text_username"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:textSize="14sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dimen_2"
            android:orientation="horizontal">

            <com.rahbarbazaar.poller.Utilities.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/text_point"
                android:text="0" />

            <com.rahbarbazaar.poller.Utilities.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="موجودی : "
                android:textColor="@color/colorPrimaryDark" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="@dimen/dimen_12"
                android:src="@drawable/arrow"
                android:tint="@color/minor_gray" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_1"
                android:layout_marginEnd="@dimen/dimen_12"
                android:background="@color/minor_gray" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <com.rahbarbazaar.poller.Utilities.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="پروژه های شرکت کرده : "
                        android:textColor="@color/colorPrimaryDark" />

                    <com.rahbarbazaar.poller.Utilities.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/text_project_count"
                        android:text="0" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <com.rahbarbazaar.poller.Utilities.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="افراد دعوت کرده : "
                        android:textColor="@color/colorPrimaryDark" />

                    <com.rahbarbazaar.poller.Utilities.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"/>

                </LinearLayout>

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dimen_5"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="-18dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <com.rahbarbazaar.poller.Utilities.CustomTextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/text_mobile"
                    android:gravity="center"
                    android:textSize="@dimen/font_13" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="@dimen/dimen_11"
                    android:background="@color/indicator_color" />

            </RelativeLayout>

            <ImageView
                android:layout_width="@dimen/dimen_45"
                android:layout_height="@dimen/dimen_45"
                android:background="@drawable/circle_stroke"
                android:padding="@dimen/dimen_8"
                android:src="@drawable/profile_phone"
                android:tint="@color/colorPrimaryDark" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_10"
            android:layout_marginEnd="@dimen/dimen_5"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="-18dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <com.rahbarbazaar.poller.Utilities.CustomTextView
                    android:layout_width="match_parent"
                    android:id="@+id/text_age"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textSize="@dimen/font_13" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="@dimen/dimen_11"
                    android:background="@color/indicator_color" />

            </RelativeLayout>

            <ImageView
                android:layout_width="@dimen/dimen_45"
                android:layout_height="@dimen/dimen_45"
                android:background="@drawable/circle_stroke"
                android:padding="@dimen/dimen_8"
                android:src="@drawable/profile_age"
                android:tint="@color/colorPrimaryDark" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_10"
            android:layout_marginEnd="@dimen/dimen_5"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="-18dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <com.rahbarbazaar.poller.Utilities.CustomTextView
                    android:layout_width="match_parent"
                    android:id="@+id/text_gender"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textSize="@dimen/font_13" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="@dimen/dimen_11"
                    android:background="@color/indicator_color" />

            </RelativeLayout>

            <ImageView
                android:layout_width="@dimen/dimen_45"
                android:layout_height="@dimen/dimen_45"
                android:background="@drawable/circle_stroke"
                android:padding="@dimen/dimen_8"
                android:src="@drawable/profile_sex"
                android:tint="@color/colorPrimaryDark" />

        </LinearLayout>

        <RelativeLayout
            android:foreground="?attr/selectableItemBackground"
            android:id="@+id/rl_logout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_8"
            android:layout_marginEnd="@dimen/dimen_12"
            android:paddingStart="21dp"
            android:paddingTop="@dimen/dimen_18"
            android:paddingEnd="0dp"
            android:paddingBottom="@dimen/dimen_5">

            <ImageView
                android:id="@+id/img_logout"
                android:layout_width="@dimen/dimen_20"
                android:layout_height="@dimen/dimen_20"
                android:layout_alignParentEnd="true"
                android:src="@drawable/logout"
                android:tint="#808080" />

            <com.rahbarbazaar.poller.Utilities.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/img_logout"
                android:layout_alignBottom="@+id/img_logout"
                android:gravity="center_vertical"
                android:layout_marginEnd="5dp"
                android:layout_toStartOf="@+id/img_logout"
                android:text="خروج از حساب کاربری"
                android:textSize="13sp"
                android:textStyle="bold" />

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/rl_edit_profile"
            android:layout_width="match_parent"
            android:foreground="?attr/selectableItemBackground"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_8"
            android:layout_marginEnd="@dimen/dimen_12"
            android:paddingStart="21dp"
            android:paddingEnd="0dp"
            android:paddingTop="@dimen/dimen_5"
            android:paddingBottom="11dp">

            <ImageView
                android:id="@+id/img_edit"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentEnd="true"
                android:src="@drawable/edit_profile"
                android:tint="#808080" />

            <com.rahbarbazaar.poller.Utilities.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/img_edit"
                android:layout_alignBottom="@+id/img_edit"
                android:gravity="center_vertical"
                android:layout_marginEnd="5dp"
                android:layout_toStartOf="@+id/img_edit"
                android:text="ارسال درخواست تغییر اطلاعات کاربری"
                android:textSize="13sp"
                android:textStyle="bold" />

        </RelativeLayout>


    </LinearLayout>


</ScrollView>
