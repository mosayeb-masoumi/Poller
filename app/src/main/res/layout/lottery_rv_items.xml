<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layoutDirection="ltr"
    android:layout_height="@dimen/dimen_65"
    app:cardCornerRadius="@dimen/dimen4"
    app:cardElevation="@dimen/dimen_2">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/linear_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/dimen_10"
            android:gravity="center"
            android:orientation="vertical">

            <com.rahbarbazaar.poller.android.Utilities.CustomTextView
                android:id="@+id/tv_lottery_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLength="10"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/font_13"
                tools:text="97/08/21" />

        </LinearLayout>

        <LinearLayout
            android:layoutDirection="locale"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginEnd="@dimen/dimen4"
            android:layout_toStartOf="@+id/linear_lottery_price"
            android:layout_toEndOf="@+id/linear_date"
            android:gravity="center"
            android:orientation="horizontal">

            <com.rahbarbazaar.poller.android.Utilities.CustomTextView
                android:id="@+id/tv_lottery_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:ellipsize="end"
                android:gravity="center"
                android:singleLine="true"
                android:textColor="@color/light_black"
                android:textSize="@dimen/font_14"
                tools:text="تعریف نشده" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_lottery_price"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:orientation="horizontal"
            android:layoutDirection="locale"
            android:layout_marginEnd="@dimen/dimen_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <com.rahbarbazaar.poller.android.Utilities.CustomTextView
                android:id="@+id/tv_lottery_price_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dimen_7"
                android:text="@string/text_point"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/font_13" />

            <com.rahbarbazaar.poller.android.Utilities.CustomTextView
                android:id="@+id/tv_lottery_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dimen_3"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/font_13"
                tools:text="2000" />

        </LinearLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>