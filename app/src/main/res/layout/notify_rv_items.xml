<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dimen_70"
    app:cardCornerRadius="@dimen/dimen4"
    app:cardElevation="@dimen/dimen_3">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_65"
        android:layout_gravity="center_vertical"
        >

        <ImageView
            android:id="@+id/image_msg_status"
            android:layout_width="@dimen/dimen_65"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_3"
            android:background="@drawable/dash_circle_bg"
            android:padding="@dimen/dimen_17"
            android:src="@drawable/close_message"
            android:tint="#818181" />

        <com.rahbarbazaar.poller.android.Utilities.CustomTextView
            android:id="@+id/text_msg_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/dimen_10"
            android:layout_toStartOf="@id/text_msg_date"
            android:layout_toEndOf="@+id/image_msg_status"
            android:gravity="left"
            tools:text="سلام عرض کردم" />

        <com.rahbarbazaar.poller.android.Utilities.CustomTextView
            android:id="@+id/text_msg_date"
            android:layout_width="@dimen/dimen_90"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/dimen_8"
            android:gravity="center"
            android:textColor="@color/colorPrimaryDark"
            tools:text="2019-03-01 03:30:00" />

    </RelativeLayout>


</android.support.v7.widget.CardView>

