<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/rl_root"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:layout_alignParentStart="true"
        android:src="@drawable/splash1_bg" />

    <ImageView
        android:layout_width="@dimen/_300sdp"
        android:layout_height="@dimen/_300sdp"
        android:id="@+id/logo"
        android:layout_marginTop="@dimen/_80sdp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/splash_logowithback" />

    <ImageView
        android:layout_width="@dimen/_90sdp"
        android:layout_height="@dimen/_60sdp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_20sdp"
        android:src="@drawable/splash1_powerbyrahbar" />



    <ImageView
        android:layout_width="@dimen/_90sdp"
        android:layout_height="@dimen/_60sdp"
        android:layout_marginTop="@dimen/_320sdp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/splash1_poller_ir" />




    <com.wang.avi.AVLoadingIndicatorView
        android:layout_width="@dimen/dimen_40"
        android:id="@+id/av_loading"
        app:indicatorColor="@color/colorPrimary"
        android:layout_height="wrap_content"
        android:layout_below="@+id/logo"
        android:layout_centerHorizontal="true"
        />

</RelativeLayout>