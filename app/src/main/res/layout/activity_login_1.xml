<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:id="@+id/login_root"
    android:layout_height="match_parent">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:scaleType="fitXY"
        android:src="@drawable/splash1_bg" />


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="@dimen/_80sdp"
        android:scaleType="fitXY"
        android:src="@drawable/semi_oval" />

    <ImageView
        android:id="@+id/original_logo"
        android:layout_width="@dimen/_120sdp"
        android:layout_height="@dimen/_130sdp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_40sdp"
        android:scaleType="fitXY"
        android:src="@drawable/orginal_logo" />


    <EditText
        android:id="@+id/et_user_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/original_logo"
        android:layout_gravity="center"
        android:layout_marginStart="@dimen/_50sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginEnd="@dimen/_50sdp"
        android:background="@drawable/edtphone_shape"
        android:gravity="center"
        android:hint="@string/enter_your_mobile_number"
        android:inputType="phone"
        android:maxLength="11"
        android:padding="@dimen/_10sdp"
        android:paddingBottom="@dimen/_3sdp"
        android:textColorHint="@color/purple"
        android:textDirection="rtl"
        android:textSize="@dimen/_13ssp" />


