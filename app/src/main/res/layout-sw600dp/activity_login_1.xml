<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/login_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:scaleType="fitXY"
        android:src="@drawable/splash1_bg" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/rl7"
        android:layout_marginStart="@dimen/_40sdp"
        android:layout_marginEnd="@dimen/_40sdp"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_220sdp"
            android:src="@drawable/splash_logo2" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_below="@+id/rl7"
        android:id="@+id/rl1"
        android:layout_height="@dimen/_33sdp">


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/_60sdp"
            android:layout_marginEnd="@dimen/_60sdp"
            android:src="@drawable/btn_phoneregister_red_shape" />
        <EditText
            android:id="@+id/et_user_login"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/_65sdp"
            android:layout_marginEnd="@dimen/_65sdp"
            android:background="@drawable/edtphone_shape"
            android:gravity="center"
            android:hint="@string/enter_your_mobile_number"
            android:inputType="phone"
            android:maxLength="11"
            android:textColorHint="@color/blue"
            android:textDirection="rtl"
            android:textSize="@dimen/_11ssp" />
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_25sdp"
        android:layout_below="@+id/rl1"
        android:layout_marginTop="@dimen/_7sdp"
        android:gravity="center">

        <RelativeLayout
            android:layout_width="@dimen/_75sdp"
            android:layout_height="@dimen/_25sdp"
            android:id="@+id/rl_av_login"
            android:layout_centerHorizontal="true"
            android:background="@drawable/btn_phoneregister_shape">

            <com.wang.avi.AVLoadingIndicatorView
                android:id="@+id/av_login"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/_3sdp"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                app:indicatorName="BallPulseIndicator" />
        </RelativeLayout>

        <com.rahbarbazaar.poller.android.Utilities.CustomTextView
            android:id="@+id/button_submit"
            android:layout_width="@dimen/_75sdp"
            android:layout_height="@dimen/_25sdp"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:background="@drawable/btn_phoneregister_shape"
            android:textSize="@dimen/_12ssp"
            android:text="@string/login_button_text"
            android:textColor="@color/main_page_toolbar" />

    </RelativeLayout>


    <ImageView
        android:layout_width="@dimen/_80sdp"
        android:layout_height="@dimen/_30sdp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/_20sdp"
        android:layout_alignParentBottom="true"
        android:src="@drawable/enterphone_iconpage"  />

</RelativeLayout>